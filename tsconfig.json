{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "types": ["node", "chrome"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}